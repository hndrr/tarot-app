{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // または "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // "noEmit": true, // Removed as it might interfere with project references build
    "baseUrl": ".",
    "paths": {
      "@repo/ui": ["packages/ui/src"],
      "@repo/types": ["packages/types/src"],
      "@repo/constants": ["packages/constants/src"],
      "@repo/utils": ["packages/utils/src"],
      "@repo/tarot-logic": ["packages/tarot-logic/src"]
    },
    "composite": false // ルートは composite ではない
  },
  "exclude": ["node_modules"]
}
